    <script>
        // Basic UI interactions: filters, search, modal, copy name, contact form
        (function(){
            const grid = document.getElementById('cards');
            const cards = Array.from(grid.querySelectorAll('.card'));
            const filters = Array.from(document.querySelectorAll('.filter-btn[data-filter], .filters .filter-btn'));
            const searchInput = document.getElementById('search');
            const viewGallery = document.getElementById('view-gallery');
            const modal = document.getElementById('modal');
            const modalImg = document.getElementById('modal-img');
            const modalTitle = document.getElementById('modal-title');
            const modalDesc = document.getElementById('modal-desc');
            const modalSpecs = document.getElementById('modal-specs');
            const modalClose = document.getElementById('modal-close');
            const year = document.getElementById('year');
            const form = document.getElementById('contactForm');
            const formStatus = document.getElementById('form-status');

            year.textContent = new Date().getFullYear();

            // Filter logic
            function applyFilter(tag){
                cards.forEach(c=>{
                    const tags = c.getAttribute('data-tags') || '';
                    const title = (c.getAttribute('data-title') || '').toLowerCase();
                    const query = searchInput.value.trim().toLowerCase();
                    const matchesTag = (tag === 'all') || tags.split(/\s+/).includes(tag);
                    const matchesSearch = !query || title.includes(query);
                    c.style.display = (matchesTag && matchesSearch) ? '' : 'none';
                });
            }

            // init filter buttons
            const filterBtns = document.querySelectorAll('.filters .filter-btn');
            filterBtns.forEach(btn=>{
                btn.addEventListener('click', ()=> {
                    filterBtns.forEach(b=>b.setAttribute('aria-pressed','false'));
                    btn.setAttribute('aria-pressed','true');
                    applyFilter(btn.dataset.filter || 'all');
                });
            });

            // Global filter buttons (card-level copy etc)
            document.addEventListener('click', (e)=>{
                const open = e.target.closest('[data-open]');
                if(open){
                    const card = open.closest('.card');
                    openCard(card);
                    return;
                }
                const copyBtn = e.target.closest('[data-copy]');
                if(copyBtn){
                    const text = copyBtn.dataset.copy || '';
                    if(navigator.clipboard){
                        navigator.clipboard.writeText(text).then(()=> {
                            copyBtn.textContent = 'Copied';
                            setTimeout(()=> copyBtn.textContent = 'Copy Name', 1200);
                        });
                    }
                    return;
                }
            });

            // Search
            searchInput.addEventListener('input', ()=>{
                const active = document.querySelector('.filters .filter-btn[aria-pressed="true"]');
                const tag = active ? active.dataset.filter : 'all';
                applyFilter(tag);
            });

            // Open modal with card info
            function openCard(card){
                if(!card) return;
                const img = card.querySelector('img');
                modalImg.src = img.src;
                modalImg.alt = img.alt || '';
                modalTitle.textContent = card.querySelector('h3').textContent;
                modalDesc.textContent = card.querySelector('.meta').textContent;
                modalSpecs.innerHTML = '';
                card.querySelectorAll('.spec').forEach(s=>{
                    const el = document.createElement('div');
                    el.className = 'spec';
                    el.textContent = s.textContent;
                    modalSpecs.appendChild(el);
                });
                document.body.style.overflow = 'hidden';
                modal.style.display = 'flex';
                modal.setAttribute('aria-hidden','false');
                modalClose.focus();
            }

            modalClose.addEventListener('click', closeModal);
            modal.addEventListener('click', (e)=> {
                if(e.target === modal) closeModal();
            });
            document.addEventListener('keydown', (e)=>{
                if(e.key === 'Escape' && modal.style.display === 'flex') closeModal();
            });
            function closeModal(){
                modal.style.display = 'none';
                modal.setAttribute('aria-hidden','true');
                document.body.style.overflow = '';
            }

            // view gallery button
            viewGallery.addEventListener('click', ()=> {
                document.getElementById('gallery').scrollIntoView({behavior:'smooth'});
            });

            // Contact form simple validation & mock submit
            form.addEventListener('submit', (e)=>{
                e.preventDefault();
                formStatus.textContent = 'Sending...';
                const data = new FormData(form);
                // Simulate network request
                setTimeout(()=>{
                    formStatus.textContent = 'Message sent. Thank you!';
                    form.reset();
                }, 900);
            });

            // Progressive enhancement: pre-apply 'all'
            applyFilter('all');

            // Accessibility: allow opening modal with Enter on card buttons
            document.addEventListener('keydown', (e)=>{
                if(e.key === 'Enter' && document.activeElement && document.activeElement.matches('[data-open]')) {
                    const card = document.activeElement.closest('.card');
                    openCard(card);
                }
            });

            // Lazy load images (basic)
            if('IntersectionObserver' in window){
                const imgs = document.querySelectorAll('img');
                const io = new IntersectionObserver((entries, obs)=>{
                    entries.forEach(ent=>{
                        if(ent.isIntersecting){
                            const img = ent.target;
                            // images already loaded via src, placeholder behavior not required. Could be used with data-src.
                            obs.unobserve(img);
                        }
                    });
                }, {rootMargin:'200px'});
                imgs.forEach(i=>io.observe(i));
            }

        })();
    </script>
</body>
</html>